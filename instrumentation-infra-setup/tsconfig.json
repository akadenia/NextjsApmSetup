{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@actions": ["./src/actions"],
      "@components/*": ["./src/components/*"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@server-utils": ["./src/server-utils"],
      "@interfaces": ["./src/interfaces"],
      "@stores": ["./src/stores"],
      "@stores/*": ["./src/stores/*"],
      "@constants": ["./src/constants"],
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@hooks": ["./src/hooks"],
      "@instrumentation/*": ["./src/instrumentation/*"],
      // For shadcn-ui
      "@/components": ["./src/components"],
      "@/utils": ["./src/utils"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
